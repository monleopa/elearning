<% provide :title, t("page_title") %>
<% provide :submit_title, t(".submit_button") %>
<h1 class="text-center"><%= t ".update_profile" %></h1>
<div class="row">
  <%= form_for @user, url: admin_patch_user_path, remote: true do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="col-md-4">
      <%= render partial: "avatar", locals: {f: f} %>
    </div>
    <div class="col-md-6">
      <%= render "form", user: @user %>
    </div>
  <% end %>
</div>
